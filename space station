#include<stdio.h>
#include<stdlib.h>
int main()
{
    int n,m,i,j,max=0,min=0,*a,x=0;
    scanf("%d%d",&n,&m);
    a=(int*)malloc(m*sizeof(int));
    for(i=0;i<m;i++)
    {
      scanf("%d",&a[i]);
    }
    for(i=0;i<n;i++)
    {
        min=0;
        for(j=0;j<m;j++)
        {
            x=abs(i-a[j]);
            if(j==0)
             min=x;
             else if(x<min)
              min=x;
        }
        if(min>max)
        max=min;
    }
    printf("%d",max);
    return 0;
}
